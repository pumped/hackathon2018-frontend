{
  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "plugins": [
    "react"
  ],

  "extends": [
    "airbnb-base"
  ],

  "rules": {
      "comma-dangle": [2, "always-multiline"],
      "no-cond-assign": [2, "always"],
      "class-methods-use-this": 0,
      "arrow-body-style": 0,

      "key-spacing": [2, {
        "mode": "minimum",
        "beforeColon": false,
        "afterColon": true
      }],

      "space-before-function-paren": [2, "never"],
      "func-names": 0,
      "max-len": [2, 180, 2],

      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",

      "import/extensions": 0,
      "import/no-unresolved": 0,
      "import/prefer-default-export": 0
    }
}
